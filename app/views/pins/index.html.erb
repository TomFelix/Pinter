<div class="panel panel-default">
  <div class="panel-heading"><h1>Listing Pins</h1></div>
  <div class="panel-body">


<p id="notice"><%= notice %></p>



<table class="table">
  <thead class="form-group">
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= image_tag pin.image.url (:medium) %></td>
        <td class="btn-group">
        <% if pin.user == current_user %>
          <%= link_to 'Show', pin, class: 'btn btn-success' %>
          <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-info' %>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="panel-footer"><%= link_to 'New Pin', new_pin_path, class: 'btn btn-primary' %></div>
</div>